---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";
import '@fontsource-variable/bricolage-grotesque';



export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "buoninglese.it"
  : "lezioni privati e corsi d'inglese";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="buoninglese.it offra lezioni privati d'inglese."
      canonical={canonicalURL}
      twitter={{
        creator: "",
        site: "",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `buoninglese.it - impara un buon inglese`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Homepage Screenshot",
        },
      }}
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Define color variables */
      :root {
        /* Backgrounds */
        --primary-bg-color: #1ac5db; /* Body background color */
        --header-bg-color: #ffffff; /* Header background color */
        --footer-bg-color: #222222; /* Footer background color */
        --sidebar-bg-color: #f4f4f4; /* Sidebar background color */

        /* Text colors */
        --primary-text-color: #333333; /* Primary text color */
        --secondary-text-color: #666666; /* Secondary text color (e.g., subheadings, minor text) */
        --link-text-color: #0077cc; /* Link color */
        --header-text-color: #444444; /* Header text color */
        --footer-text-color: #ffffff; /* Footer text color */

        /* Button colors */
        --button-bg-color: #0077cc; /* Button background color */
        --button-text-color: #ffffff; /* Button text color */
        --button-hover-bg-color: #005fa3; /* Button hover background color */

        /* Border colors */
        --border-color: #dddddd; /* General border color */
        --header-border-color: #bbbbbb; /* Header border color */
        --footer-border-color: #444444; /* Footer border color */

        /* Accent colors */
        --accent-color: #ff5733; /* Accent color for highlights */
        --highlight-color: #f4f4f4; /* Highlight color for selected elements */

        /* Shadow colors */
        --shadow-color: rgba(0, 0, 0, 0.1); /* Shadow color */
      }

      /* Apply variables in your styles */
      body {
        background-color: var(--primary-bg-color); /* Primary background color */
        color: var(--primary-text-color); /* Primary text color */
      }

      header {
        background-color: var(--header-bg-color); /* Header background color */
        color: var(--header-text-color); /* Header text color */
        border-bottom: 1px solid var(--header-border-color); /* Header border color */
      }

      footer {
        background-color: var(--footer-bg-color); /* Footer background color */
        color: var(--footer-text-color); /* Footer text color */
        border-top: 1px solid var(--footer-border-color); /* Footer border color */
      }

      a {
        color: var(--link-text-color); /* Link text color */
        text-decoration: none;
      }

      a:hover {
        color: var(--accent-color); /* Accent color on hover */
      }

      button {
        background-color: var(--button-bg-color); /* Button background color */
        color: var(--button-text-color); /* Button text color */
        border: none;
        padding: 10px 20px;
        cursor: pointer;
      }

      button:hover {
        background-color: var(--button-hover-bg-color); /* Button hover background color */
      }

      .sidebar {
        background-color: var(--sidebar-bg-color); /* Sidebar background color */
        border-right: 1px solid var(--border-color); /* Sidebar border color */
      }

      .highlight {
        background-color: var(--highlight-color); /* Highlighted content */
      }

      .prose {
        color: var(--primary-text-color); /* Text color for paragraphs */
      }

      img {
        content-visibility: auto;
      }
    </style>
</body>

</html>
