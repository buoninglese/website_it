---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";
import '@fontsource-variable/bricolage-grotesque';



export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "buoninglese.it"
  : "lezioni privati e corsi d'inglese";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="buoninglese.it offra lezioni privati d'inglese."
      canonical={canonicalURL}
      twitter={{
        creator: "",
        site: "",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `buoninglese.it - impara un buon inglese`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Homepage Screenshot",
        },
      }}
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Define color variables */
      :root {
        /* Backgrounds */
        --primary-bg-color: #003b5c; /* Prussian Blue for body background */
        --header-bg-color: #003b5c; /* Prussian Blue for header background */
        --footer-bg-color: #003b5c; /* Prussian Blue for footer background */
        --sidebar-bg-color: #f7f7f7; /* Light gray for sidebar background */
    
        /* Text colors */
        --primary-text-color: #ffffff; /* White text for main content */
        --secondary-text-color: #ffcc00; /* Gold for secondary text (e.g., subheadings, minor text) */
        --link-text-color: #4fd1c5; /* Teal for link text */
        --header-text-color: #ffffff; /* White text for header */
        --footer-text-color: #ffffff; /* White text for footer */
    
        /* Button colors */
        --button-bg-color: #0082a3; /* A lighter shade of Prussian Blue for buttons */
        --button-text-color: #ffffff; /* White text for buttons */
        --button-hover-bg-color: #006885; /* Darker shade of Prussian Blue for button hover */
    
        /* Border colors */
        --border-color: #dddddd; /* Light gray border color */
        --header-border-color: #ffffff; /* White border for header */
        --footer-border-color: #444444; /* Dark gray for footer border */
    
        /* Accent colors */
        --accent-color: #ff5733; /* Accent color for highlights (vibrant red-orange) */
        --highlight-color: #f4f4f4; /* Light gray for highlighted content */
    
        /* Shadow colors */
        --shadow-color: rgba(0, 0, 0, 0.1); /* Light shadow color for depth */
      }
    
      /* Apply variables in your styles */
      body {
        background-color: var(--primary-bg-color); /* Primary background color */
        color: var(--primary-text-color); /* Primary text color */
      }
    
      header {
        background-color: var(--header-bg-color); /* Header background color */
        color: var(--header-text-color); /* Header text color */
        border-bottom: 1px solid var(--header-border-color); /* Header border color */
      }
    
      footer {
        background-color: var(--footer-bg-color); /* Footer background color */
        color: var(--footer-text-color); /* Footer text color */
        border-top: 1px solid var(--footer-border-color); /* Footer border color */
      }
    
      a {
        color: var(--link-text-color); /* Link text color */
        text-decoration: none;
      }
    
      a:hover {
        color: var(--accent-color); /* Accent color on hover */
      }
    
      button {
        background-color: var(--button-bg-color); /* Button background color */
        color: var(--button-text-color); /* Button text color */
        border: none;
        padding: 10px 20px;
        cursor: pointer;
      }
    
      button:hover {
        background-color: var(--button-hover-bg-color); /* Button hover background color */
      }
    
      .sidebar {
        background-color: var(--sidebar-bg-color); /* Sidebar background color */
        border-right: 1px solid var(--border-color); /* Sidebar border color */
      }
    
      .highlight {
        background-color: var(--highlight-color); /* Highlighted content */
      }
    
      .prose {
        color: var(--primary-text-color); /* Text color for paragraphs */
      }
    
      img {
        content-visibility: auto;
      }
    </style>
    </body>
    </html>
    